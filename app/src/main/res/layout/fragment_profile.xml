<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@color/seed"
    tools:context="feature.profile.ProfileFragment">

    <include
        android:id="@+id/layout_banner_fragment_profile"
        layout="@layout/layout_banner_fragment_profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp" />

    <include
        android:id="@+id/layout_detail_fragment_profile"
        layout="@layout/layout_detail_fragment_profile"
        android:layout_width="match_parent"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_banner_fragment_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>